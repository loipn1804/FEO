<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="@dimen/short_distance_margin_padding"
    android:background="@drawable/bg_main_banner"
    android:gravity="center"
    android:minWidth="1000dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffc000"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/tv_height"
            android:gravity="center"
            android:text="Guest Infomation"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_large"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="#ffdedede" />
    </LinearLayout>

    <EditText
        android:id="@+id/popup_guest_name"
        style="@style/EdittextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/short_distance_margin_padding"
        android:background="@drawable/feo_ios_edt_rect"
        android:hint="Name*"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true" />

    <EditText
        android:id="@+id/popup_guest_phone1"
        style="@style/EdittextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/short_distance_margin_padding"
        android:background="@drawable/feo_ios_edt_rect"
        android:hint="Phone 1*"
        android:inputType="numberDecimal"
        android:singleLine="true" />

    <EditText
        android:id="@+id/popup_guest_phone2"
        style="@style/EdittextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/short_distance_margin_padding"
        android:background="@drawable/feo_ios_edt_rect"
        android:hint="Phone 2 (Optional)"
        android:inputType="numberDecimal"
        android:singleLine="true" />

    <EditText
        android:id="@+id/popup_guest_email"
        style="@style/EdittextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/short_distance_margin_padding"
        android:background="@drawable/feo_ios_edt_rect"
        android:hint="Email (Optional)"
        android:inputType="textMultiLine"
        android:singleLine="true" />

    <ImageButton
        android:id="@+id/popup_imb_submid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="@dimen/short_distance_margin_padding"
        android:layout_marginTop="@dimen/average_distance_margin_padding"
        android:background="@drawable/ic_submit_button"
        android:scaleType="centerInside" />

</LinearLayout>