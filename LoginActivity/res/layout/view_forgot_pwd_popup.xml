<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="@dimen/short_distance_margin_padding"
    android:background="@drawable/bg_main_banner"
    android:gravity="center"
    android:minWidth="1000dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/popup_title_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffc000"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/popup_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tv_height"
            android:gravity="center"
            android:text="Reset Password"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="#ffdedede" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/short_distance_margin_padding"
        android:gravity="center"
        android:text="Please enter the email when you signed up for the account"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/popup_edittext"
        style="@style/EdittextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/short_distance_margin_padding"
        android:background="@drawable/feo_ios_edt_rect"
        android:hint="@string/prompt_email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:singleLine="true" />

    <ImageButton
        android:id="@+id/popup_imb_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="@dimen/short_distance_margin_padding"
        android:layout_marginTop="@dimen/average_distance_margin_padding"
        android:background="@drawable/ic_submit_button"
        android:scaleType="centerInside" />

</LinearLayout>