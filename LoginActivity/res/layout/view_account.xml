<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    style="@style/AppScreenStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_delivery_time"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <include layout="@layout/view_header" />

            <TextView
                android:id="@+id/account_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/average_distance_margin_padding"
                android:background="@drawable/orange_bg"
                android:paddingBottom="@dimen/short_distance_margin_padding"
                android:paddingLeft="@dimen/average_distance_margin_padding"
                android:paddingRight="@dimen/average_distance_margin_padding"
                android:paddingTop="@dimen/short_distance_margin_padding"
                android:text="Edit"
                android:textColor="@color/white" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_delivery_time"
            android:paddingLeft="@dimen/very_long_distance_margin_padding"
            android:paddingRight="@dimen/very_long_distance_margin_padding"
            android:paddingTop="@dimen/short_distance_margin_padding"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="@dimen/home_item_padding"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/account_fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/transparent"
                    android:ellipsize="middle"
                    android:enabled="false"
                    android:gravity="center"
                    android:padding="@dimen/short_distance_margin_padding"
                    android:singleLine="true"
                    android:textSize="@dimen/textsize_x_large" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/short_distance_margin_padding"
                            android:text="Account Type"
                            android:textColor="@color/orage_light"
                            android:textSize="@dimen/textsize_normal" />

                        <TextView
                            android:id="@+id/account_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/short_distance_margin_padding"
                            android:singleLine="true"
                            android:textSize="@dimen/textsize_normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/short_distance_margin_padding"
                            android:text="Position"
                            android:textColor="@color/orage_light"
                            android:textSize="@dimen/textsize_normal" />

                        <TextView
                            android:id="@+id/account_position"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/short_distance_margin_padding"
                            android:singleLine="true"
                            android:textSize="@dimen/textsize_normal" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/profile_box_1"
                    android:orientation="vertical"
                    android:padding="@dimen/short_distance_margin_padding" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shop Name"
                        android:textColor="@color/orage_light"
                        android:textSize="@dimen/textsize_normal" />

                    <EditText
                        android:id="@+id/account_shop_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/short_distance_margin_padding"
                        android:background="@color/transparent"
                        android:enabled="false"
                        android:gravity="left"
                        android:singleLine="true"
                        android:textSize="@dimen/textsize_larger" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/account_margin_t"
                    android:background="@drawable/profile_box_1"
                    android:orientation="vertical"
                    android:padding="@dimen/short_distance_margin_padding" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@color/orage_light"
                        android:textSize="@dimen/textsize_normal" />

                    <EditText
                        android:id="@+id/account_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/short_distance_margin_padding"
                        android:background="@color/transparent"
                        android:enabled="false"
                        android:gravity="left"
                        android:singleLine="true"
                        android:textSize="@dimen/textsize_larger" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/account_margin_t"
                    android:background="@drawable/profile_box_1"
                    android:orientation="vertical"
                    android:padding="@dimen/short_distance_margin_padding" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Number"
                        android:textColor="@color/orage_light"
                        android:textSize="@dimen/textsize_normal" />

                    <EditText
                        android:id="@+id/account_contact_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/short_distance_margin_padding"
                        android:background="@color/transparent"
                        android:enabled="false"
                        android:gravity="left"
                        android:singleLine="true"
                        android:textSize="@dimen/textsize_larger" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/account_margin_t"
                    android:background="@drawable/profile_box_2"
                    android:orientation="vertical"
                    android:padding="@dimen/short_distance_margin_padding"
                    android:visibility="gone" >

                    <EditText
                        android:id="@+id/account_default_deli_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:ellipsize="end"
                        android:enabled="false"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Manage Delivery Address"
                        android:textColor="@color/orage_light"
                        android:textSize="@dimen/textsize_normal" />

                    <ImageView
                        android:id="@+id/account_address_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/account_default_deli_address"
                        android:layout_marginTop="@dimen/short_distance_margin_padding"
                        android:padding="@dimen/short_distance_margin_padding"
                        android:src="@drawable/address_plus" />

                    <EditText
                        android:id="@+id/account_shop_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/account_default_deli_address"
                        android:layout_marginTop="@dimen/short_distance_margin_padding"
                        android:layout_toLeftOf="@id/account_address_edit"
                        android:background="@color/transparent"
                        android:ellipsize="end"
                        android:enabled="false"
                        android:gravity="left|top"
                        android:lines="2"
                        android:textSize="@dimen/textsize_larger" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/account_outlet"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/icon_height"
                    android:layout_marginTop="@dimen/account_margin_t"
                    android:layout_marginBottom="@dimen/short_distance_margin_padding"
                    android:background="@drawable/account_outlet"
                    android:scaleType="centerInside" />

                <ImageView
                    android:id="@+id/account_orderhis"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/icon_height"
                    android:layout_marginBottom="@dimen/short_distance_margin_padding"
                    android:layout_marginTop="@dimen/account_margin_t"
                    android:background="@drawable/profile_order_history"
                    android:scaleType="centerInside" />

                <ImageView
                    android:id="@+id/account_changepw"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/icon_height"
                    android:layout_marginTop="@dimen/account_margin_t"
                    android:layout_marginBottom="@dimen/short_distance_margin_padding"
                    android:background="@drawable/feo_ios_account_page_change_password"
                    android:paddingBottom="@dimen/short_distance_margin_padding"
                    android:paddingTop="@dimen/short_distance_margin_padding"
                    android:scaleType="centerInside" />

                <ImageView
                    android:id="@+id/account_logout"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/icon_height"
                    android:layout_marginTop="@dimen/account_margin_t"
                    android:layout_marginBottom="@dimen/average_distance_margin_padding"
                    android:background="@drawable/profile_logout"
                    android:scaleType="centerInside" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <include layout="@layout/view_progressbar" />

</RelativeLayout>