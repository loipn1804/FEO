<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="@dimen/short_distance_margin_padding"
    android:background="@drawable/bg_main_banner"
    android:gravity="center"
    android:minWidth="1000dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffc000"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/tv_height"
            android:gravity="center"
            android:text="Download PricesList"
            android:textColor="#ffffff"
            android:textSize="@dimen/textsize_large"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="#ffdedede" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/short_distance_margin_padding"
        android:gravity="left"
        android:text="Folder:"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/download_select"
            android:layout_width="@dimen/tv_height"
            android:layout_height="@dimen/tv_height"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_download" />

        <TextView
            android:id="@+id/download_folder"
            style="@style/EdittextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/short_distance_margin_padding"
            android:layout_toLeftOf="@id/download_select"
            android:background="@drawable/feo_ios_edt_rect"
            android:maxLines="1"
            android:singleLine="true" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/short_distance_margin_padding"
        android:gravity="left"
        android:text="Name:"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/download_name"
        style="@style/EdittextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/short_distance_margin_padding"
        android:background="@drawable/feo_ios_edt_rect"
        android:maxLines="1"
        android:singleLine="true" />

    <TextView
        android:id="@+id/download_submid"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_margin="@dimen/short_distance_margin_padding"
        android:layout_marginTop="@dimen/average_distance_margin_padding"
        android:background="@drawable/dowload_bg"
        android:gravity="center"
        android:scaleType="centerInside"
        android:text="Save it"
        android:textColor="#ffffff"
        android:textSize="@dimen/textsize_large"
        android:textStyle="bold" />

</LinearLayout>