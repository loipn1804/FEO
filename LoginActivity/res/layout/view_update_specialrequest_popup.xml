<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="@dimen/short_distance_margin_padding"
    android:background="@drawable/bg_main_banner"
    android:gravity="center"
    android:minWidth="1000dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/popup_title_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffc000"
        android:orientation="vertical">

        <TextView
            android:id="@+id/popup_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tv_height"
            android:gravity="center"
            android:text="Update Order"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_large"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="#ffdedede" />
    </LinearLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/short_distance_margin_padding"
        android:layout_marginRight="@dimen/short_distance_margin_padding"
        android:layout_marginTop="@dimen/average_distance_margin_padding"
        android:hint=" Special request:"
        android:singleLine="true" />

    <EditText
        android:id="@+id/popup_edt_specailrequest"
        style="@style/EdittextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/short_distance_margin_padding"
        android:layout_marginRight="@dimen/short_distance_margin_padding"
        android:layout_marginTop="@dimen/average_distance_margin_padding"
        android:background="@drawable/feo_ios_edt_rect"
        android:hint=""
        android:singleLine="true" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/short_distance_margin_padding"
        android:layout_marginRight="@dimen/short_distance_margin_padding"
        android:layout_marginTop="@dimen/average_distance_margin_padding"
        android:hint=" Quantity:"
        android:singleLine="true" />

    <EditText
        android:id="@+id/popup_edt_quantity"
        style="@style/EdittextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/short_distance_margin_padding"
        android:layout_marginRight="@dimen/short_distance_margin_padding"
        android:layout_marginTop="@dimen/average_distance_margin_padding"
        android:background="@drawable/feo_ios_edt_rect"
        android:hint=""
        android:inputType="numberDecimal"
        android:maxLength="5"
        android:singleLine="true" />

    <ImageButton
        android:id="@+id/popup_imb_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="@dimen/short_distance_margin_padding"
        android:background="@drawable/ic_submit_button"
        android:scaleType="centerInside" />

</LinearLayout>